<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/CodeGold"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/CurrencyGold"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="test"
        app:layout_constraintEnd_toEndOf="@+id/SellGold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/SellGold"
        app:layout_constraintTop_toBottomOf="@+id/SellGold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/SellGold"
        android:layout_width="140dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CodeGold"
        tools:ignore="MissingConstraints"
        android:text="test"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/BuyGold"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="test"
        app:layout_constraintEnd_toEndOf="@+id/CodeGold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CodeGold"
        app:layout_constraintTop_toBottomOf="@+id/CodeGold"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>