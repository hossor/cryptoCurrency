<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1D1A">

    <ImageView
        android:id="@+id/slide_im"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center"
        android:padding="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/slide_im"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/slide_heading"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/slide_descreption"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="دسترسی به بروز ترین نمودارها و تحلیل آن ها"
            android:textColor="#ffff"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/slide_heading" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>